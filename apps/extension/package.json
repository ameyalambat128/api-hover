{
  "name": "@api-hover/extension",
  "displayName": "API Hover",
  "version": "0.0.1",
  "description": "Hover to see API calls tied to your interactions.",
  "author": "API Hover",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check": "tsc --noEmit --incremental false",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@api-hover/core": "workspace:*",
    "lucide-react": "^0.468.0",
    "plasmo": "^0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.9.2"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "storage",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icon.png",
          "assets/fonts/Geist-Regular.woff2",
          "assets/fonts/Geist-SemiBold.woff2",
          "assets/fonts/GeistMono-Regular.woff2"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
