{
  "name": "api-hover",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "build:extension": "turbo run build --filter=@api-hover/extension",
    "dev:extension": "turbo run dev --filter=@api-hover/extension",
    "build:www": "turbo run build --filter=www",
    "dev:www": "turbo run dev --filter=www"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.2.11",
      "@types/react-dom": "^19.2.3"
    }
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18"
  }
}
